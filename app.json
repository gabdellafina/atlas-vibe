{
  "expo": {
    "name": "atlas-vibe",
    "slug": "atlas-vibe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "atlasvibe",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seudominio.atlasvibe",
      "infoPlist": {
        "NSCameraUsageDescription": "Usamos a câmera para tirar fotos do rolê.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar sua galeria para salvar/mostrar fotos.",
        "NSLocationWhenInUseUsageDescription": "Usamos sua localização para nomear o rolê e marcar o local.",
        "NSCalendarsUsageDescription": "Criamos um evento do rolê no seu calendário."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.seudominio.atlasvibe",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ],
      "versionCode": 1
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir $(PRODUCT_NAME) usar sua localização."
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Permitir $(PRODUCT_NAME) usar a câmera para tirar fotos.",
          "mediaLibraryPermission": "Permitir $(PRODUCT_NAME) acessar suas fotos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}